<!DOCTYPE html>
<html lang="en">
    <head>
        {{template "header"}}
    </head>
    <body>
        {{template "nav" .}}

        <div class="container my-3">
            <div class="mb-3">
                <div><a href="/"><<< Back</a></div>
                <h1>Clinic's Appointments</h1>
            </div>

            <hr/>

            {{ if gt (len .Appointments) 0 }}
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Appointment ID</th>
                            <th scope="col">Time</th>
                            <th scope="col">Patient</th>
                            <th scope="col">Dr.</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{ range $key, $val := .Appointments }}
                        <tr>
                            <td>{{ $val.Id }}</td>
                            <td>{{ time2HumanReadable $val.Time }}</td>
                            <td>{{ $val.Patient.First_name }} {{ $val.Patient.Last_name }}</td>
                            <td>{{ $val.Doctor.First_name }} {{ $val.Doctor.Last_name }}</td>
                            <td>
                                <a href="/appointment/edit?apptId={{ $val.Id }}&action=edit" class="btn btn-primary btn-sm" role="button">Edit</a>
                                <a href="/admin/payment/enqueue?apptId={{ $val.Id }}" class="btn btn-success btn-sm" role="button">Add To Payment Queue</a>
                                <a href="/appointment/edit?apptId={{ $val.Id }}&action=cancel" class="btn btn-danger btn-sm" role="button">Cancel Appointment</a>
                            </td>
                        </tr>
                    {{ end }}
                    </tbody>
                </table>
            {{ else }}
                <div>There are no upcoming appointments.</div>
            {{ end }}

            {{template "footer"}}
        </div>
    </body>
</html>
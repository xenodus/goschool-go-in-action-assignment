<!DOCTYPE html>
<html lang="en">
    <head>
        {{template "header" .}}
    </head>
    <body>
        {{template "nav" .}}

        <div class="container my-4">
            <div class="mb-3">
                <div class="mb-1"><a href="/" class="btn btn-dark btn-sm mb-1" role="button"><i class="fas fa-reply"></i> Back</a></div>
                <h1>Clinic's Appointments</h1>
            </div>

            <hr/>

            {{ if .ErrorMsg }}
            <div class="alert alert-danger" role="alert">
                {{ ucFirst .ErrorMsg }}
            </div>
            {{ end }}

            {{ if gt (len .Appointments) 0 }}
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Appointment ID</th>
                            <th scope="col">Time</th>
                            <th scope="col">Patient</th>
                            <th scope="col">Dr.</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{ range $key, $val := .Appointments }}
                        <tr>
                            <td>{{ $val.Id }}</td>
                            <td>{{ time2HumanReadable $val.Time }}</td>
                            <td>{{ $val.Patient.First_name }} {{ $val.Patient.Last_name }}</td>
                            <td>{{ $val.Doctor.First_name }} {{ $val.Doctor.Last_name }}</td>
                            <td>
                                <form class="d-inline-block" method="post" action="/admin/appointment/edit?apptId={{$val.Id}}&action=edit">
                                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                </form>

                                <form class="d-inline-block" method="post" action="/admin/appointment/edit?apptId={{$val.Id}}&action=cancel">
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                </form>

                                <form class="d-inline-block" method="post" action="/admin/payment/enqueue?apptId={{$val.Id}}">
                                    <button type="submit" class="btn btn-success btn-sm">Add To Payment Queue</button>
                                </form>
                            </td>
                        </tr>
                    {{ end }}
                    </tbody>
                </table>
            {{ else }}
                <div>There are no upcoming appointments.</div>
            {{ end }}

            {{template "footer"}}
        </div>
    </body>
</html>
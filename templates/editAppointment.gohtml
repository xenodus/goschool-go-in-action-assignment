<!DOCTYPE html>
<html lang="en">
    <head>
        {{template "header" .}}
    </head>
    <body>
        {{template "nav" .}}

        <div class="container my-4">
            <div class="mb-3">
                <div class="mb-1"><a href="/appointments" class="btn btn-dark btn-sm mb-1" role="button"><i class="fas fa-reply"></i> Back</a></div>
                <h1>Edit Appointment</h1>
            </div>

            <hr/>

            {{ if .ErrorMsg }}
            <div class="alert alert-danger" role="alert">
                {{ ucFirst .ErrorMsg }}
            </div>
            {{ end }}

            {{ if .Appt }}
            <div class="mb-3">Appointment ({{ .Appt.Id }}) with <strong>Dr. {{ .Appt.Doctor.First_name }} {{ .Appt.Doctor.Last_name }} ({{ .Appt.Doctor.Id }})</strong> is scheduled for <strong>{{ time2HumanReadable .Appt.Time }}</strong></div>
            {{ end }}

            <form method="post">
                {{ if gt (len .TimeslotsAvailable) 0 }}
                <div class="form-group mb-3">
                    <label for="timeslot" class="form-label">Change Timeslot</label>
                    <select class="form-select" name="timeslot">
                    {{ range .TimeslotsAvailable }}
                        <option value="{{.}}">{{time2HumanReadable .}}</option>
                    {{ end }}
                    </select>
                </div>

                <div><button type="submit" class="btn btn-primary mb-3">Edit Appointment</button></div>
                {{ end }}
            </form>

            {{template "footer"}}
        </div>
    </body>
</html>
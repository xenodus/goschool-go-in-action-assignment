<!DOCTYPE html>
<html lang="en">
    <head>
        {{template "header" .}}
    </head>
    <body>
        {{template "nav" .}}

        <div class="container my-3">

            {{ if .ErrorMsg }}
            <div class="alert alert-danger" role="alert">
                {{ .ErrorMsg }}
            </div>
            {{ end }}

            {{ if .ChosenDoctor }}
                <div class="mb-3">
                    <div class="mb-1"><a href="/doctors" class="btn btn-dark btn-sm mb-1" role="button"><i class="fas fa-reply"></i> Back</a></div>
                    <h1>Dr. {{ .ChosenDoctor.First_name }} {{ .ChosenDoctor.Last_name }}</h1>
                </div>

                <hr/>

                {{ if gt (len .TimeslotsAvailable) 0 }}
                    <div>Available timeslots</div>

                    <ul>
                    {{ range .TimeslotsAvailable }}
                        <li>{{time2HumanReadable .}}</li>
                    {{ end }}
                    </ul>
                {{ else }}
                    <div>There are no more available timeslots for Dr. {{ .ChosenDoctor.First_name }} {{ .ChosenDoctor.Last_name }}</div>
                {{ end }}
            {{ else }}
                <div class="mb-3">
                    <div class="mb-1"><a href="/" class="btn btn-dark btn-sm mb-1" role="button"><i class="fas fa-reply"></i> Back</a></div>
                    <h1>Ours Doctors</h1>
                    <div>Select a doctor to view his/her availability</div>
                </div>

                <hr/>

                <ul>
                {{ range .Doctors }}
                    <li><a href="/doctors?doctorID={{ .Id }}">{{ .First_name }} {{ .Last_name }}</a></li>
                {{ end }}
                </ul>
            {{ end }}

            {{template "footer"}}
        </div>
    </body>
</html>